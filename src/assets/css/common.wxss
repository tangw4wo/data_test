p,
ul,
li {
  margin: 0;
  padding: 0;
}
body {
  background: #fff;
  color: #333;
  font-size: 14px;
  font-family: "Microsoft YaHei", "\5FAE\8F6F\96C5\9ED1", Verdana, Arial, Helvetica, sans-serif;
  position: relative;
}
ul,
ol,
li {
  list-style-type: none;
}
.point {
  cursor: pointer;
}
.el-module {
  border: 1px solid #ebeef5;
  color: #333;
  transition: box-shadow 0.3s;
  box-sizing: border-box;
  background-color: #fff;
  padding: 0 10px;
}
.el-module:hover {
  box-shadow: 0 0px 12px 0 rgba(0, 0, 0, 0.1);
}
.clearfcb:after {
  content: '';
  display: table;
  clear: both;
}
.clearfcb {
  *zoom: 1;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.box-border {
  box-sizing: border-box;
}
.ja-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.ft-24 {
  font-size: 24px;
}
.ft-16 {
  font-size: 16px;
}
.ft-18 {
  font-size: 18px;
}
.ft-20 {
  font-size: 20px;
}
.ft-22 {
  font-size: 22px;
}
.ft-26 {
  font-size: 26px;
}
.ft-28 {
  font-size: 28px;
}
.ft-30 {
  font-size: 30px;
}
h1,
h2,
h3,
h4,
h5,
h6 {
  margin: 0;
  padding: 0;
  font-weight: normal;
}
.m-el-cover {
  padding: 10px;
  height: 100%;
}
.m-el-m-cover {
  margin: 0 -10px;
}
.b-icon {
  font-size: 50px;
  width: 100px;
  height: 100px;
  text-align: center;
  line-height: 100px;
  color: #fff;
}
.color-004 {
  background-color: #00a0e4;
}
@media screen and (max-width: 1440px) {
  .b-icon {
    font-size: 40px;
    width: 80px;
    height: 80px;
    line-height: 80px;
  }
}
@media screen and (max-width: 1024px) {
  * {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
  }
  html {
    width: 100%;
    height: 100%;
    margin: 0px;
    padding: 0px;
    -webkit-text-size-adjust: none;
    font-family: -apple-system, "PingFang SC", "Helvetica Neue", Helvetica, STHeiTi, sans-serif;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    font-size: 62.5%;
    background: transparent;
  }
  body {
    width: 100%;
    height: 100%;
    -webkit-overflow-scrolling: touch;
    -webkit-font-smoothing: antialiased;
    -webkit-touch-callout: none;
  }
  body,
  div,
  dl,
  dt,
  dd,
  ul,
  ol,
  li,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  pre,
  code,
  form,
  fieldset,
  legend,
  input,
  textarea,
  p,
  blockquote,
  th,
  td,
  hr,
  button,
  article,
  aside,
  details,
  figcaption,
  figure,
  footer,
  header,
  hgroup,
  menu,
  nav,
  section,
  sumary {
    margin: 0;
    padding: 0;
  }
  input,
  select,
  textarea {
    border: 0;
    -webkit-appearance: none;
    appearance: none;
  }
  ol,
  ul {
    list-style: none;
  }
  *:not(input):not(select):not(textArea) {
    user-select: none;
    -webkit-user-select: none;
  }
  img,
  a {
    -webkit-touch-callout: none;
  }
  a,
  a:active,
  a:hover {
    text-decoration: none;
  }
  a,
  button,
  input,
  textarea {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  }
}
